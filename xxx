    <script>
        // Ad view timer simulation
        document.addEventListener('DOMContentLoaded', function() {
            const adButtons = document.querySelectorAll('.ad-action .btn');
            
            adButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const card = this.closest('.ad-card');
                    const timer = card.querySelector('.ad-timer');
                    const reward = card.querySelector('.ad-reward').textContent;
                    const rewardAmount = parseInt(reward.match(/\d+/)[0]);
                    
                    // Disable button during ad view
                    this.disabled = true;
                    this.textContent = 'অপেক্ষা করুন...';
                    
                    // Get timer text
                    let timeText = timer.textContent;
                    let seconds = 30;
                    
                    if(timeText.includes('মিনিট')) {
                        seconds = 60 * parseInt(timeText.match(/\d+/)[0]);
                    } else if(timeText.includes('সেকেন্ড')) {
                        seconds = parseInt(timeText.match(/\d+/)[0]);
                    } else if(timeText.includes('প্রশ্ন')) {
                        seconds = 20 * parseInt(timeText.match(/\d+/)[0]);
                    }
                    
                    let remaining = seconds;
                    
                    // Update timer during ad view
                    const countdown = setInterval(() => {
                        remaining--;
                        
                        if(remaining > 0) {
                            timer.innerHTML = `<i class="fas fa-hourglass-half"></i> ${remaining} সেকেন্ড বাকি`;
                        } else {
                            clearInterval(countdown);
                            timer.innerHTML = `<i class="fas fa-check-circle"></i> সম্পন্ন হয়েছে!`;
                            this.textContent = 'ইনকাম সংগ্রহ করুন';
                            this.disabled = false;
                            this.classList.add('btn-accent');
                            
                            // Add reward to balance
                            const balanceEl = document.querySelector('.user-balance');
                            const currentBalance = parseInt(balanceEl.textContent.match(/\d+/)[0]);
                            const newBalance = currentBalance + rewardAmount;
                            balanceEl.innerHTML = `<i class="fas fa-coins"></i> ৳ ${newBalance.toLocaleString('bn-BD')}`;
                            
                            // Update today's stats
                            const adsViewedEl = document.querySelectorAll('.stat-box .number')[0];
                            const earningsTodayEl = document.querySelectorAll('.stat-box .number')[1];
                            
                            adsViewedEl.textContent = parseInt(adsViewedEl.textContent) + 1;
                            earningsTodayEl.textContent = `৳ ${parseInt(earningsTodayEl.textContent.match(/\d+/)[0]) + rewardAmount}`;
                        }
                    }, 1000);
                });
            });
            
            // Pulse animation for bonus button
            const bonusBtn = document.querySelector('.pulse');
            setInterval(() => {
                bonusBtn.classList.toggle('pulse');
                setTimeout(() => bonusBtn.classList.toggle('pulse'), 100);
            }, 4000);
        });
    </script>
</body>
</html>
